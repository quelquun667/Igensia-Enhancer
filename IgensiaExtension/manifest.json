{
  "manifest_version": 3,
  "name": "Igensia Enhancer",
  "version": "1.4.2",
  "description": "Ajoute des espaces et am√©liore l'affichage sur le site MonCampus Igensia.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://moncampus.igensia-education.fr/*", "https://ws-notes-igs.wigorservices.net/*"],
  "content_scripts": [
    {
      "matches": ["https://ws-notes-igs.wigorservices.net/home/releve*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://moncampus.igensia-education.fr/*"],
      "js": ["inject_devoirs_tab.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "extension_home.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
